{
  "compilerOptions": {
    "incremental": true,
    "composite": true,
    "rootDir": "src",
    "target": "ESNext",
    "lib": [],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "sourceMap": true,
    "outDir": "lib",
    "stripInternal": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"],
  "references": [
    {
      "path": "./tsconfig.package.json"
    }
  ]
}
